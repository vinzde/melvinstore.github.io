  </footer>  <!-- Toast -->  <div id="toast" role="status" aria-live="polite"></div>  <script>
    // Data produk
    const products = [
      { name: "PANEL 1GB",  spec: "Ram 1GB | CPU 100% | Disk 5GB",   price: "Rp1.000" },
      { name: "PANEL 2GB",  spec: "Ram 2GB | CPU 200% | Disk 10GB",  price: "Rp2.000" },
      { name: "PANEL 3GB",  spec: "Ram 3GB | CPU 300% | Disk 15GB",  price: "Rp3.000" },
      { name: "PANEL 4GB",  spec: "Ram 4GB | CPU 400% | Disk 20GB",  price: "Rp4.000" },
      { name: "PANEL 5GB",  spec: "Ram 5GB | CPU 500% | Disk 25GB",  price: "Rp5.000" },
      { name: "PANEL 6GB",  spec: "Ram 6GB | CPU 600% | Disk 30GB",  price: "Rp6.000" },
      { name: "PANEL 7GB",  spec: "Ram 7GB | CPU 700% | Disk 35GB",  price: "Rp7.000" },
      { name: "PANEL 8GB",  spec: "Ram 8GB | CPU 800% | Disk 40GB",  price: "Rp8.000" },
      { name: "PANEL 9GB",  spec: "Ram 9GB | CPU 900% | Disk 45GB",  price: "Rp9.000" },
      { name: "PANEL 10GB", spec: "Ram 10GB | CPU 1000% | Disk 50GB", price: "Rp10.000" },
      { name: "PANEL UNLI", spec: "Ram Unlimited | CPU Unlimited | Disk Unlimited", price: "Rp13.000" },
      { name: "RESSELER PANEL", spec: "bebas crate panel | bisa jualan panel", price: "Rp15.000" },
      { name: "ADMIN PANEL", spec: "bebas crate panel | bisa jualan panel | bisa open res panel", price: "Rp20.000" },
    ];

    const WA_NUMBER = "6287855816834"; // nomor WA tujuan (format internasional tanpa +)

    let cart = [];

    // Helpers
    const onlyDigits = (str) => parseInt(String(str).replace(/\D/g, "")) || 0;
    const formatIDR = (num) => new Intl.NumberFormat("id-ID").format(num);

    function toast(msg) {
      const el = document.getElementById("toast");
      el.textContent = msg;
      el.classList.add("show");
      clearTimeout(window.__toastTimer);
      window.__toastTimer = setTimeout(() => el.classList.remove("show"), 1600);
    }

    // Render products
    function renderProducts() {
      const productList = document.getElementById("product-list");
      productList.innerHTML = products
        .map(
          (p) => `
          <div class="product">
            <img src="https://img1.pixhost.to/images/8015/632343970_kayzennotdev.jpg" alt="${p.name}" height="80" />
            <h2>${p.name}</h2>
            <p>${p.spec}</p>
            <div class="price">${p.price}</div>
            <button class="btn" onclick="addToCart('${p.name}', '${p.price}')">Tambah ke Keranjang</button>
          </div>`
        )
        .join("");
    }

    // Cart ops
    function addToCart(product, price) {
      cart.push({ product, price });
      renderCart();
      toast(`${product} ditambahkan ke keranjang`);
    }

    function removeFromCart(index) {
      const removed = cart[index]?.product;
      cart.splice(index, 1);
      renderCart();
      if (removed) toast(`${removed} dihapus dari keranjang`);
    }

    function renderCart() {
      const cartItems = document.getElementById("cart-items");
      const cartTotal = document.getElementById("cart-total");
      cartItems.innerHTML = "";
      let total = 0;

      cart.forEach((item, index) => {
        const harga = onlyDigits(item.price);
        total += harga;
        cartItems.innerHTML += `
          <li>
            <span>${item.product} â€” <strong>${item.price}</strong></span>
            <button class="remove" onclick="removeFromCart(${index})">Hapus</button>
          </li>`;
      });

      cartTotal.innerHTML = `<strong>Total:</strong> Rp${formatIDR(total)}`;
    }

    function checkout() {
      if (cart.length === 0) {
        toast("Keranjang masih kosong!");
        return;
      }
      // Build message
      let total = 0;
      let message = "Halo, saya ingin membeli:%0A"; // %0A = newline encoded
      cart.forEach((item) => {
        const harga = onlyDigits(item.price);
        total += harga;
        message += `- ${item.product} (${item.price})%0A`;
      });
      message += `%0ATotal: Rp${formatIDR(total)}`;

      const url = `https://wa.me/${WA_NUMBER}?text=${message}`;
      window.open(url, "_blank");
    }

    // Initial render
    renderProducts();
    renderCart();
  </script></body>
